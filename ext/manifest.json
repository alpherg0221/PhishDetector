{
  "manifest_version": 3,
  "name": "PhishDetector",
  "short_name": "PhishDetector",
  "description": "Phish Detector for Chrome Extension",
  "version": "1.4.0",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "js": [
        "src/loader.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/warning/index.html",
        "src/detector.js",
        "assets/utils.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}